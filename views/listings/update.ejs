<% layout("/layout/boilerplate") %>
<div class="row">
    <div class="col col-8 offset-2">
        <h1>Update Listing</h1>
        <form method="POST" action="/listings/<%=listing.id%>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label for="listing[title]" class="form-label">Name:</label>
                <input name="listing[title]" class="form-control" value="<%=listing.title%>" type="text" required>    
                <div class="valid-feedback">
                    Title is valid.
                </div>  
                <div class="invalid-feedback">
                    Title must be valid.
                </div>
            </div>
            <div class="mb-3">
                <label for="listing[description]" class="form-label">Description:</label>
                <textarea name="listing[description]" class="form-control" type="text" required><%=listing.description%></textarea>
                <div class="valid-feedback">
                    Description is valid.
                </div>  
                <div class="invalid-feedback">
                    Description must be valid.
                </div>    
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="image" class="form-label">Original Image:</label>
                    <img src="<%=originalImageUrl%>">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="image" class="form-label">Upload Image:</label>
                    <input id="image" name="uploaded-file" class="form-control-file" type="file">
                    <div class="valid-feedback">
                        Image URL is valid.
                    </div>  
                    <div class="invalid-feedback">
                        Image URL must be valid.
                    </div>       
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="listing[price]" class="form-label">Price:</label>
                    <input name="listing[price]" class="form-control" value="<%=listing.price%>" type="number" required> 
                    <div class="valid-feedback">
                        Price is valid.
                    </div>  
                    <div class="invalid-feedback">
                        Price must be valid.
                    </div>   
                </div>
                <div class="mb-3 col-md-8">
                    <label for="listing[country]" class="form-label">Country:</label>
                    <input name="listing[country]" class="form-control" value="<%=listing.country%>" type="text" required>
                    <div class="valid-feedback">
                        Country is valid.
                    </div>  
                    <div class="invalid-feedback">
                        Country must be valid.
                    </div>    
                </div>    
            </div>
            <div class="mb-3">
                <label for="listing[location]" class="form-label">Location:</label>
                <input name="listing[location]" class="form-control" value="<%=listing.location%>" type="text" required>   
                <div class="valid-feedback">
                    Location is valid.
                </div>  
                <div class="invalid-feedback">
                    Location must be valid.
                </div> 
            </div>
            <button class="btn btn-primary">Update</button>
        </form>
    </div>
</div>