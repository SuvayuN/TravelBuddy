<% layout("/layout/boilerplate") %>
    <h1>All Listings</h1>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for(listing of allListings){%>
                <a href="/listings/<%=listing.id%>">
                <div class="card listing-card cols" style="width: 18rem;">
                    <img src=<%=listing.image.url%> class="card-img-top index-listing-image" alt="Listing Image">
                    <div class="card-img-overlay card-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><span class="title"><%=listing.title%></span><br>
                        <span class="description"><%=listing.description%></span><br>
                        <span class="price">&#8377;<%=listing.price.toLocaleString("en-IN")%>/night</span></p>
                    </div>
                </div>
                </a>
            <%}%>
        </div>